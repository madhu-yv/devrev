<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

    <title>Document</title>

    <style>

        
header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    padding: 20px 100px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index:99;
}

.logo{
    font-size: 2em;
    color:#fff ;
    user-select: none;
}

.navigation a {
    position: relative;
    font-size: 1.1em;
    color:#fff ;
    text-decoration: none;
    font-weight: 500;
    margin-left: 40px;
}

.navigation a::after{
    content: '';
    position: absolute;
    left: 0;
    bottom: -6px;
    width: 100%;
    height: 3px;
    background:#fff ;
    border-radius: 5px;
    transform-origin: right;
    transform: scaleX(0);
    transition: transform.5s;
}
.navigation a:hover::after{
    transform-origin: left;
    transform: scaleX(1);
}

        th,td{
            text-align: center;
        }
        .form-book{
            display: flex;
            min-height: 100vh;
            flex-direction: column;
            justify-content: space-around;
        }

        .form-district{
            margin-left: auto;
            margin-right: auto;
        }

        table{
            width: 60% !important;
            margin-left: auto;
            margin-right: auto;
            background-color: rgba(250, 244, 236, 0.242);
            border: 50px;
        }

        .no-data{
            text-align: center;
        }

        
        body {
            min-height: 100vh;
            background:url('/styles/bg.png') no-repeat;
            background-size:cover;
            background-position: center;
        }

        form h2{
            color:white
        }


    </style>
</head>
<body>

 <header>
        <h2 class="logo"></h2>
        <nav class="navigation">
            <a href="/">Home</a>
            <a href="/home">Book slot</a>
            <a href="/admin">Admin</a>
        </nav>
    </header>

<div class="form-book">
        
    <form action="/home" class="form-district" method="post">
    <h2>Enter your District</h2>
        <input type="text" id="filterInput" name="district">
        <input type="submit">
    </form>

  {{#if details}}
         <table class="table table-hover">
        <thead>
            <tr>
            <th scope="col">Center Name</th>
            <th scope="col">District</th>
            <th scope="col">Availability</th>
            <th scope="col">Book</th>

            </tr>
        </thead>
        <tbody>

          


    {{#each details 
     }}
            <tr>
      
            <th scope="row">{{centerName}}</th>
            <td>{{district}}</td>
            <td>{{available}}</td>
            {{!-- <td><a href=""><button class="btn btn-success">
                
            </button></a></td> --}}
            <td>   
                   {{!-- {{#if status}} --}}
                   {{!-- {{#if (gt available 0)}} --}}

                <form action="/user/bookSlot/{{_id}}" method="post">
                    <input type="text" name="phone" id="">
                    <button type="submit" class="trigger-btn btn btn-success submit"  data-toggle="modal">
                    Book Now

                    </button>

                </form>
                {{!-- {{else}}
                
  Not Available
{{/if}} --}}

            </td>
            </tr>
           
        {{!-- <a href="/user/show/{{_id}}">{{centerName}}</a> --}}
     
    {{/each }}
    
            </tbody>
    </table>

              

            {{else}}
                
  <div class="no-data">
    <h2>Currently no centers are available in your location</h2>
  </div>
{{/if}}



</div>










<!-- Modal HTML -->
<div id="myModal" class="modal fade">
	<div class="modal-dialog modal-confirm">
		<div class="modal-content">
			<div class="modal-header">
				<div class="icon-box">
					<i class="material-icons">&#xE876;</i>
				</div>				
				<h4 class="modal-title w-100">Awesome!</h4>	
			</div>
			<div class="modal-body">
				<p class="text-center">Your booking has been confirmed.</p>
			</div>
			<div class="modal-footer">
				<button class="btn btn-success btn-block" data-dismiss="modal">OK</button>
			</div>
		</div>
	</div>
</div>     



</body>



</html> 
